#!/bin/bash

set -e

# DI-04
iptables -A INPUT -s 10.0.0.0/32 -p tcp --dport 8086  -j ACCEPT
iptables -A INPUT -s 10.0.0.0/32 -p tcp --dport 8088  -j ACCEPT
iptables -A INPUT -s 10.0.0.0/32 -p udp --dport 8086  -j ACCEPT
iptables -A INPUT -s 10.0.0.0/32 -p udp --dport 8088  -j ACCEPT

# DI-06
sudo chown vcap:vcap /var/vcap/jobs/influxdb/config/influxdb.conf
sudo chmod 640 /var/vcap/jobs/influxdb/config/influxdb.conf

if [ ! -d /home/vcap/.ssh ]; then
  echo "mkdir VCAP SSH"
  mkdir /home/vcap/.ssh
  chown -R vcap:vcap /home/vcap/.ssh
fi

<% if p('influxdb.https_enabled') == 'true' %>
cp /var/vcap/jobs/influxdb/bin/private_key.pem /home/vcap/.ssh/
chmod 600 /home/vcap/.ssh/private_key.pem
<% else %>
<% end %>
chown -R vcap:vcap /home/vcap/.ssh/*
